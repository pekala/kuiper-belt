{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [      
            "dom",
            "es2015",
            "esnext.asynciterable"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "scripts/types/*"
            ]
        }
    },
    "include": [
        "scripts/**/*"
    ]
}